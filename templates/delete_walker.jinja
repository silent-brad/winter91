{% extends "partials/_master.jinja" %}

{% block title %}Delete Walker Account{% endblock %}

{% block content %}
<article>
	<section>
		<h1 style="color: var(--error-oklch-500);">Delete Walker Account</h1>
		<p>Are you absolutely sure you want to delete your walker account?</p>
	</section>
	
	<div id="delete-messages">
	{% if error_message.is_some() %}
		<div class="error" style="
			background-color: var(--error-oklch-500);
      color: var(--neutral-oklch-50);
      padding: 1rem;
      border-radius: 0.375rem;
			margin-bottom: 1rem;
		">
			{{error_message.get()}}
		</div>
	{% endif %}
	</div>
	
	<div style="
		background-color: var(--warning-oklch-100);
		border: 1px solid var(--warning-oklch-300);
		padding: 1.5rem;
		border-radius: 0.375rem;
		margin: 2rem 0;
	">
		<h3 style="color: var(--warning-oklch-700); margin: 0 0 1rem 0;">⚠️ This action cannot be undone</h3>
		<p style="margin: 0; color: var(--warning-oklch-700);">
			This will permanently delete:
		</p>
		<ul style="color: var(--warning-oklch-700); margin: 0.5rem 0 0 1rem;">
			<li>Your walker profile and settings</li>
			<li>All your mile entries and progress</li>
			<li>All your posts and comments</li>
			<li>Your profile picture and uploaded images</li>
		</ul>
	</div>
	
	<form method="post" action="/delete-walker" 
		hx-post="/delete-walker"
		hx-target="#delete-messages"
		hx-swap="innerHTML"
		style="display: flex; gap: 1rem; margin-top: 2rem;">
		<button type="submit" style="
			background-color: var(--error-oklch-500);
			color: var(--neutral-oklch-50);
			padding: 0.75rem 1.5rem;
			border: none;
			border-radius: 0.375rem;
			font-weight: 500;
			cursor: pointer;
		">Yes, delete my account</button>
		
		<a href="/settings" style="
			background-color: var(--neutral-oklch-200);
			color: var(--neutral-oklch-800);
			padding: 0.75rem 1.5rem;
			text-decoration: none;
			border-radius: 0.375rem;
			font-weight: 500;
		">Cancel</a>
	</form>
</article>
{% endblock %}
