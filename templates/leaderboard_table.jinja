{% if user_stats.len() > 0 %}
	<table>
		<thead>
			<tr>
				<th>Rank</th>
				<th>Walker</th>
				<th>Miles</th>
				<th>Progress</th>
			</tr>
		</thead>
		<tbody>
			{% for (rank, user_stat) in user_stats.pairs() %}
        {% let walker = user_stat.walker %}
				<tr>
					<td class="numbers">{{rank + 1}}</td>
					<td>
            {% let name = walker.name %}
            {% let avatar_filename = walker.avatar_filename %}
            {% importnimja "partials/_walker_avatar.jinja" %}
					</td>
					<td><strong class="numbers">{{user_stat.total_miles}}</strong></td>
					<td>
						<div style="display: flex; align-items: center; gap: 0.5rem;">
							{% let progress_percent = (user_stat.total_miles.float / 91.0 * 100.0).min(100.0) %}
              <div style="width: 1rem;">
                {% importnimja "partials/_progress_bar.jinja" %}
              </div>
							<small class="numbers">{{progress_percent.int}}%</small>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% else %}
	<p style="text-align: center; color: var(--color-text-muted); margin: 2rem 0;">
		No walkers yet. Be the first to <a href="/signup">sign up</a>!
	</p>
{% endif %}
