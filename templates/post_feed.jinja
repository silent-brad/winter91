{% if posts.len > 0 %}
	{% for post in posts %}
		<div class="post-card">
			<div style="margin-bottom: 0.5rem;">
        {% let name = post.name %}
        {% let avatar_filename = post.avatar_filename %}
        {% importnimja "partials/_walker_avatar.jinja" %}
				<small class="numbers" style="color: var(--color-text-muted); margin-left: 0.5rem;">{{post.created_at.format_date_with_ordinal()}}</small>
			</div>
			
			<div style="margin-bottom: 0.5rem;">{{post.text_content}}</div>
			
			{% if post.image_filename != "" %}
				<div style="margin: 0.5rem 0;">
					<img
						src="/pictures/{{post.image_filename}}"
						alt="Post image"
						style="max-width: 100%; height: auto; border-radius: 0.375rem;"
					>
				</div>
			{% endif %}
		</div>
	{% endfor %}
{% else %}
	<p>No posts yet. Be the first to share something!</p>
{% endif %}
