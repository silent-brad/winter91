{% if posts.len > 0 %}
	{% for post in posts %}
		<article style="border-bottom: 1px solid var(--color-border-light); padding-bottom: 1rem; margin-bottom: 1rem;">
			<header style="margin-bottom: 0.5rem;">
        {% let id = post.walker_id %}
        {% let name = post.name %}
        {% importnimja "partials/_walker_avatar.jinja" %}
				<small style="color: var(--color-text-muted); margin-left: 0.5rem;">{{post.created_at}}</small>
			</header>
			
			<div style="margin-bottom: 0.5rem;">{{post.text_content}}</div>
			
			{% if post.image_filename != "" %}
				<div style="margin: 0.5rem 0;">
					<img
						src="/pictures/{{post.image_filename}}"
						alt="Post image"
						style="max-width: 100%; height: auto; border-radius: 0.375rem;"
					>
				</div>
			{% endif %}
		</article>
	{% endfor %}
{% else %}
	<p>No posts yet. Be the first to share something!</p>
{% endif %}
